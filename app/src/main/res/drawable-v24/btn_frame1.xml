<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="5dp">
                <shape>
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="0dp" android:topLeftRadius="50dp" android:topRightRadius="50dp" />

                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="0dp">
                <shape>
                    <gradient android:angle="0"
                        android:endColor="@color/app" android:startColor="@color/app" />
                    <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="0dp" android:topLeftRadius="50dp" android:topRightRadius="50dp" />
                    <padding android:bottom="20dp" android:left="20dp"
                        android:right="20dp" android:top="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>